                                  gaia.debugger.stub)
                          (build (world.client executable: "world" resources: "resources"))
                          (dependencies scheme.core
                                        jazz
                                        jazz.debuggee
                                        jazz.foreign
                                        jazz.graphic
                                        jazz.graphic.opengl
                                        jazz.io
                                        jazz.jml
                                        jazz.jrm
                                        jazz.library
                                        jazz.media
                                        jazz.network
                                        jazz.platform
                                        jazz.system
                                        jazz.ui
                                        srfi-19
                                        contrib.irregex
                                        jazz.designer
                                        jazz.editor.jazz
                                        jazz.profile
                                        profiler
                                        world
                                        world.foreign))
            (world.showcase.immediate (title "Showcase")
                                      (run world.showcase.immediate.run)
                                      (update world.showcase.immediate.window
                                              world.showcase.immediate.run)
                                      (build world.showcase.immediate)
                                      (dependencies jazz
                                                    jazz.debuggee
                                                    jazz.graphic
                                                    jazz.graphic.opengl
                                                    jazz.io
                                                    jazz.jml
                                                    jazz.library
                                                    jazz.media
                                                    jazz.network
                                                    jazz.platform
                                                    jazz.system
                                                    jazz.ui
                                                    contrib.irregex))
            (world.showcase.shader (title "Shader")
                                   (run world.showcase.shader.run)
                                   (update world.showcase.shader.window
                                           world.showcase.shader.run)
                                   (build world.showcase.shader)
                                   (dependencies jazz
                                                 jazz.debuggee
                                                 jazz.graphic
                                                 jazz.graphic.opengl
                                                 jazz.io
                                                 jazz.jml
                                                 jazz.library
                                                 jazz.media
                                                 jazz.network
                                                 jazz.platform
                                                 jazz.system
                                                 jazz.ui
                                                 contrib.irregex))
            (world.showcase (dependencies world.showcase.immediate
                                          world.showcase.shader))
            (world.all (dependencies world.client
                                     world.showcase)))
  (project ".project"))

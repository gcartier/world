;;;
;;;; Project
;;;


(data jazz.ide.data.project


(import (jazz.project)
        (jazz.editor.jazz))


(form
  (<Project>                 name: client    description-file: {File :context ".package"}
    (<*>                                     tag-reference: {File :context "client.project"})
    (<*>                                     tag-reference: {File :context "shader.project"})
    (<*>                                     tag-reference: {File :context "showcase.project"})
    (<Project-Directory>                     directory: {Directory :context "src"}
      (<Project-Directory>                   directory: {Directory :context "src" "world"}
        (<Project-Directory>                 directory: {Directory :context "src" "world" "client"}
          (<Jazz-File>       name: _client   source: {File :context "src" "world" "client" "_client.jazz"})
          (<Jazz-File>       name: bubbles   source: {File :context "src" "world" "client" "bubbles.jazz"})
          (<Jazz-File>       name: run       source: {File :context "src" "world" "client" "run.jazz"})
          (<Jazz-File>       name: snakes    source: {File :context "src" "world" "client" "snakes.jazz"})
          (<Jazz-File>       name: appl      source: {File :context "src" "world" "client" "appl.jazz"})
          (<Jazz-File>       name: tree      source: {File :context "src" "world" "client" "tree.jazz"})
          (<Jazz-File>       name: live      source: {File :context "src" "world" "client" "live.jazz"}))
        (<Jazz-File>         name: _world    source: {File :context "src" "world" "_world.jazz"})
        (<Jazz-File>         name: geometry  source: {File :context "src" "world" "geometry.jazz"})
        (<Jazz-File>         name: object    source: {File :context "src" "world" "object.jazz"})
        (<Jazz-File>         name: texture   source: {File :context "src" "world" "texture.jazz"})
        (<Jazz-File>         name: window    source: {File :context "src" "world" "window.jazz"})
        (<Project-Directory>                 directory: {Directory :context "src" "world" "showcase"}
          (<Jazz-File>       name: run       source: {File :context "src" "world" "showcase" "run.jazz"})
          (<Jazz-File>       name: _showcase source: {File :context "src" "world" "showcase" "_showcase.jazz"}))
        (<Jazz-File>         name: autoload  source: {File :context "src" "world" "autoload.jazz"})
        (<Project-Directory>                 directory: {Directory :context "src" "world" "shader"}
          (<Jazz-File>       name: _shader   source: {File :context "src" "world" "shader" "_shader.jazz"})
          (<Jazz-File>       name: run       source: {File :context "src" "world" "shader" "run.jazz"}))
        (<Jazz-File>         name: foreign   source: {File :context "src" "world" "foreign.jazz"})
        (<Project-File>                      source: {File :context "src" "world" "product.scm"})
        (<Jazz-File>         name: syntax    source: {File :context "src" "world" "syntax.jazz"}))))))

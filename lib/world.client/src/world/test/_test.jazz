;;;
;;;; Profiling
;;;


@w (
(import (jazz.syntax (phase syntax))
        (world.profiling))

(definition (goo a b)
  (site goo
    (let ((x (site x (+ a b))))
      (define (bar)
        (site bar
          (let ((y (site y (+ a b))))
            y)))
      
      (site bar.1 (bar))
      (loop (repeat 10)
            (site bar.2 (bar)))
      x)))

(setup-profiling)

(reset-chronology)
(advise-sites)

(debug (goo 1 2))

@w
(debug (sites-tree)))



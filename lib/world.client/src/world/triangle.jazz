(module world.triangle jazz


(import (jazz.geometry)
        (jazz.graphic)
        (jazz.graphic.opengl.glew)
        (jazz.io)
        (jazz.library)
        (jazz.literals)
        (jazz.media)
        (jazz.network)
        (jazz.platform)
        (jazz.platform.cairo)
        (jazz.runtime)
        (jazz.system)
        (jazz.ui)
        (jazz.ui.dialog)
        (jazz.ui.window)
        (world)
        (world.foreign)
        (world.texture)
        (time))


(definition public (make-triangle normal v1 t1 v2 t2 v3 t3)
  (new Triangle normal v1 t1 v2 t2 v3 t3))


;;;
;;;; Triangle
;;;


(class Triangle extends Object
  
  
  (slot normal initialize #f getter generate)
  (slot v1     initialize #f getter generate)
  (slot v2     initialize #f getter generate)
  (slot v3     initialize #f getter generate)
  (slot t1     initialize #f getter generate)
  (slot t2     initialize #f getter generate)
  (slot t3     initialize #f getter generate)
  
  
  (method override (initialize normal v1 t1 v2 t2 v3 t3)
    (nextmethod)
    (set! normal~self normal)
    (set! v1~self v1)
    (set! v2~self v2)
    (set! v3~self v3)
    (set! t1~self t1)
    (set! t2~self t2)
    (set! t3~self t3))
  
  
  (method override (print output readably)
    (print-unreadable self output
      (lambda (output)
        (format output "{a} {a} {a}" v1 v2 v3))))))

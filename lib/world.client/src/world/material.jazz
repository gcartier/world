;;;; World Materials
;;;


(module world.material jazz


(import (jazz.jml)
        (jazz.graphic)
        (jazz.graphic.opengl.glew)
        (world)
        (world.draw)
        (world.foreign)
        (world.foreign.obj)
        (world.gadget)
        (world.geometry)
        (world.mesh)
        (world.shader)
        (world.sprite))


;;;
;;;; Material
;;;


(class Material extends Object
  
  
  (slot texture <object> initialize #f accessors generate)
  
  
  (method override (initialize (texture: texture #f))
    (set! texture~self texture))))

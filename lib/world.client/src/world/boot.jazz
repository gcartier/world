(module world.boot jazz


(import (jazz.debuggee)
        (jazz.graphic.opengl.glew)
        (jazz.graphic.opengl.window)
        (jazz.io)
        (jazz.platform)
        (jazz.system)
        (jazz.ui.window)
        (world)
        (world.autoload)
        (world.io)
        (world.syntax (phase syntax))
        (world.window))


(definition public (boot-client application-class window-class start-world start-zone)
  (initialize-aliases)
  (set-cursor :arrow)
  (parameterize ((run-loop? #f))
    (boot-environment~ (new application-class))
    (set-current-world-window (new-opengl-window class: window-class fullscreen?: (shift-down?) position: {Point 50 50} size: {Dimension 1200 800} visible?: #f))
    (open-world/zone start-world start-zone)
    (set-default-context (current-world))
    (show~ (current-world-window))
    (run-loop~ (get-application)))))

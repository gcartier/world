  (method override (content-changing self range strings)
    (clear-indicators))

  
  (method override (show-arguments self)
    )
  
  
  (method override (evaluate-selection self)
    (let ((zone (current-zone)))
      (let ((pane (find-ascendant self Script-Pane)))
        (let ((edited (get-edited pane)))
          (when (is? edited Entity)
            (let ((script (need-script zone edited)))

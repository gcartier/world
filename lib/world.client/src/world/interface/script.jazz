(definition protected edited-entity
  #f)

(definition protected (set-edited-entity entity)
  (set! edited-entity entity))

(definition protected (reset-edited-entity)
  (set! edited-entity #f))


(definition protected (effective-edited)
  (let ((world (current-world)))
    (or edited-entity (first-target world))))


(definition public (toggle-script)
  (interface-script (not interface-script?)))


(definition public (toggle-script-paused)
  (let ((world (current-world)))
    (let ((target (first-target world)))
      (when (is? target Entity)
        (let ((script (get-script target)))
          (when script
            (enqueue-event script 'toggle-paused)))))))


(definition (interface-script flag (update-debugger?: update-debugger? #t) (force?: force? #f))
  (let ((window (current-world-window))
        (world (current-world)))
    (set-interface-script? flag)
    (update-script-pane update-debugger?: update-debugger? force?: force?)
    (update-parameter world 'script)
    (update-window-cursor window)))


(definition public (view-workspace)
  (when (programmer?)
    (let ((visible? interface-script?))
      (interface-script #t force?: #t)
      (let ((interface (current-interface)))
        (let ((pane (child interface 'script)))
          (let ((splitter (locate pane 'workspace-splitter)))
            (when (zoomed? splitter)
              (update-workspace pane))
            (if (not visible?)
                (unzoom splitter)
              (toggle-zoom splitter 'second))
            (if (zoomed? splitter)
                (acquire-focus (locate pane '(script text)))
              (let ((tree (locate pane '(scripts scripts))))
                (set-single-selection tree 0)
                (acquire-focus tree)))))))))


(definition public (view-console)
  (interface-script #t)
  (let ((interface (current-interface)))
    (let ((pane (child interface 'script)))
      (let ((splitter (locate pane 'console-splitter)))
        (update-console (get-edited pane))
        (toggle-zoom splitter 'second)))))


(definition public (update-console entity)
  (when (eq? (effective-edited) entity)
    (let ((interface (current-interface)))
      (let ((pane (child interface 'script)))
        (let ((border (locate pane 'console-border))
              (output (get-output entity)))
          (close-children border)
          (when output
            (let ((view (console-view (get-content output) (or (get-size output) 24))))
              (set-parent view border))))))))


(definition public (view-script)
  (interface-script #t)
  (let ((interface (current-interface)))
    (let ((pane (child interface 'script)))
      (let ((splitter (locate pane 'script-splitter)))
        (zoom splitter 'first)
        (acquire-focus (locate pane '(script text)))))))


(definition protected indicators
  #f)


(definition protected (clear-indicators)
  (let ((interface (current-interface)))
    (when indicators
      (let ((text (locate (child interface 'script) '(script text))))
        (let ((model (get-model text)))
          (for-each (lambda (range)
                      (apply-style model (get-default-style model) (get-start range) (get-end range)))
                    indicators)))
      (set! indicators #f))))


;; some code copied from edit-stop/detail for now
(definition public (update-script-walk locations)
  (let ((world (current-world))
        (interface (current-interface)))
    (let ((targ (effective-edited)))
      (when targ
        (let ((text (locate (child interface 'script) '(script text)))
              (script (get-script targ)))
          (define (find-location location)
            (bind (container line col) location
              (let ((start (new Cell line col))
                    (end (new Cell line (+ col 1))))
                ;; too brittle for sejour
                (if (not (world-setting 'world.outer-expr? #t))
                    (valid-range text (new Range$Cell$ start end))
                  (let ((expl <Text-Explorer> (new (explorer-class text) (get-model text) start: start end: start)))
                    (catch (Explore-Error exc
                             (valid-range text (new Range$Cell$ start end)))
                      (if (outer-expr expl uniform-style?: #t)
                          (get-range expl)
                        (valid-range text (new Range$Cell$ start end)))))))))
          
          (let ((model (get-model text)))
            (let ((ranges (map find-location locations)))
              (for-each (lambda (range)
                          (apply-style model 'Walk (get-start range) (get-end range))
                          (ensure-cell-displayed text (get-start range)))
                        ranges)
              (set! indicators ranges))))))))


;; some code copied from Indicator:edit for now
(definition public (update-script-error locat state)
  (let ((world (current-world))
        (interface (current-interface)))
    (when locat
      (bind (container line col) (locat->container/line/col locat)
        (let ((targ (effective-edited)))
          (when (eq? container 'instance)
            (let ((text (locate (child interface 'script) '(script text))))
              (define (determine-range)
                (let ((line (valid-line text line)))
                  (let ((start (if col (new Cell line col) (new Cell line (get-column text line))))
                        (end (if col (new Cell line (+ col 1)) (new Cell line (paragraph-length text line)))))
                    ;; too brittle for sejour
                    (if (or (eq? state 'read) (not (world-setting 'world.outer-expr? #t)))
                        (valid-range text (new Range$Cell$ start end))
                      (let ((expl <Text-Explorer> (new (explorer-class text) (get-model text) start: start end: start)))
                        (catch (Explore-Error exc
                                 (valid-range text (new Range$Cell$ start end)))
                          (if (outer-expr expl uniform-style?: #t)
                              (get-range expl)
                            (valid-range text (new Range$Cell$ start end)))))))))
              
              (let ((range (determine-range)))
                (apply-style (get-model text) (if (eq? state 'read) 'Walk 'Error) (get-start range) (get-end range))
                (ensure-range-displayed text range)
                (set! indicators (list range))))))))))


(definition public (view-debugger)
  (when (programmer?)
    (interface-script #t update-debugger?: #f)
    (let ((interface (current-interface)))
      (let ((pane (child interface 'script)))
        (let ((splitter (locate pane 'script-splitter)))
          (when (zoomed? splitter)
            (update-debugger pane))
          (toggle-zoom splitter 'first))))))


(definition public (update-debugger-pane target)
  (when (and interface-script? (programmer?))
    (unless (world-setting 'world.live-coding? #t)
      (let ((interface (current-interface)))
        (let ((pane (child interface 'script)))
          (when (get-visible? pane)
            (let ((edited (get-edited pane)))
              (when (eq? edited target)
                (update-debugger pane)
                (let ((splitter (locate pane 'script-splitter)))
                  (if (and edited
                           (get-script edited)
                           (eq? (get-state (get-script edited)) 'error))
                      (unzoom splitter)
                    (zoom splitter 'first)))))))))))


(definition public (view-toolbox)
  (interface-script #t)
  (let ((interface (current-interface)))
    (let ((pane (child interface 'script)))
      (let ((splitter (locate pane 'toolbox-splitter)))
        (toggle-zoom splitter 'first)))))


(definition public (run-selected-script)
  (let ((world (current-world)))
    (let ((entity (first-target world)))
      (if (not entity)
          (bell)
        (let ((script (get-script entity)))
          (if (not script)
              (bell)
            (run-script-change (current-seconds) entity)))))))


(definition public (update-script-pane (update-debugger?: update-debugger? #t) (force?: force? #f))
  (let ((interface (current-interface))
        (world (current-world))
        (zone (current-zone)))
    (let ((window (get-window world))
          (pane (child interface 'script)))
      (define (hide-pane)
        (save-pane)
        (let ((edited (get-edited pane)))
          ;; in case element was deleted
          (when (and edited (get-designer-chunk edited))
            (edit-script-change (current-seconds) edited #f)))
        ;; collabo hack
        (unless (local?)
          (set-visible? (child interface 'chat) #t))
        (set-edited pane #f)
        (set-visible? pane #f)
        (reset-focus window))
      
      (define (show-pane edited)
        (let ((actual (get-edited pane)))
          (when (and actual (neq? actual edited))
            (edit-script-change (current-seconds) actual #f)))
        (set-edited pane edited)
        (when edited
          (edit-script-change (current-seconds) edited #t))
        (set-visible? (locate pane '(script run)) (and (not (admin?)) (not (world-setting 'world.live-coding? #t))))
        (let ((splitter (locate pane 'toolbox-splitter)))
          ;; put back to #t when it's really working well and useful
          (if (world-setting 'world.script-toolbox? #f)
              (unzoom splitter)
            (zoom splitter 'first)))
        (set-visible? pane #t)
        ;; collabo hack
        (unless (local?)
          (set-visible? (child interface 'chat) #f))
        (when (and update-debugger? edited)
          (update-debugger-pane edited)))
      
      (define (save-pane)
        (clear-indicators)
        (save-script pane))
      
      (if (not interface-script?)
          (hide-pane)
        (let ((targ (effective-edited)))
          (unless (and targ (eq? targ (get-edited pane)))
            (typecase targ
              ((Asset-Entity)
               (save-pane)
               (let ((text (locate pane '(script text)))
                     (script (get-script targ)))
                 (set-string-content text (get-text script))
                 (show-pane targ)))
              ((Block-Entity)
               (if (or (not (local?)) ;; todo
                       (neq? (get-model targ) 'CommandBlock))
                   (hide-pane)
                 (save-pane)
                 (let ((text (locate pane '(script text)))
                       (script (get-script targ)))
                   (set-string-content text (if script (get-text script) ""))
                   (show-pane targ))))
              ((Entity)
               (if (not (designable? zone targ))
                   (hide-pane)
                 (save-pane)
                 (let ((text (locate pane '(script text)))
                       (script (get-script targ)))
                   (set-string-content text (if script (get-text script) ""))
                   (show-pane targ))))
              (else
               (if force?
                   (show-pane #f)
                 (hide-pane))
               @obsolete-scriptable!?
               (let ((scriptable? (and targ (scriptable? targ))))
                 (if (not scriptable?)
                     (hide-pane)
                   (let ((name (get-name targ)))
                     (if (not name)
                         (hide-pane)
                       (if (not (get-cataloguer))
                           (hide-pane)
                         (let ((locator (compose-reference 'tutorial.objectives name)))
                           (let ((entry (locator->entry locator)))
                             (if (not entry)
                                 (hide-pane)
                               (save-pane)
                               (let ((text (locate pane '(script text))))
                                 (set-moniker (get-document-controller text) (get-moniker entry))
                                 (set-selection-safe text (get-range entry) reposition: 'vertical ensure-displayed?: #t)
                                 (show-pane #f))))))))))))))))))


;;;
;;;; Zoom
;;;


@wait
(definition zoom-factors
  '(25 33 50 67 75 80 90 100 110 125 150 175 200 250 300 400 500))


@wait
(definition zoom-factor
  #f)


(definition public (setup-script-zoom)
  @wait (
  (set! zoom-factor (world-setting 'world.zoom-factor #f))
  (zoom-factor-update)))


@wait
(definition (set-zoom-factor factor)
  (let ((world (current-world)))
    (set! zoom-factor factor)
    (set-setting options-settings 'world.zoom-factor factor)
    (save-content options-settings)
    (zoom-factor-update)
    (display-message world (format "{a}%" (or factor 100)))))


@wait
(definition (zoom-factor-update)
  (let ((interface (current-interface)))
    (let ((pane (child interface 'script)))
      (let ((text (locate pane '(script text))))
        (set-scaling text (and zoom-factor (/ (cast <fl> zoom-factor) 100.)))))))


(definition public (script-zoom-in)
  @wait
  (let ((current (or zoom-factor 100)))
    (let ((next (next-element zoom-factors current cycle?: #f)))
      (if (not next)
          (bell)
        (set-zoom-factor next)))))


(definition public (script-zoom-out)
  @wait
  (let ((current (or zoom-factor 100)))
    (let ((previous (previous-element zoom-factors current cycle?: #f)))
      (if (not previous)
          (bell)
        (set-zoom-factor previous)))))


(definition public (script-unzoom)
  @wait
  (set-zoom-factor #f))



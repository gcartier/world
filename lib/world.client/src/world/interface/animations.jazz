(class Animations-Showcase extends World-Showcase
  
  
  (method override (showcase-spacing)
    .75)
  
  
  (method (showcase-entity)
    (let ((world (current-world)))
      (let ((target (first-target~ world)))
        (when (and target (is? target Entity))
          target))))
  
  
  (method override (showcase-showing)
    (let ((entity (showcase-entity)))
      (and entity (get-model~ entity))))
  
  
  (method override (showcase-elements showing)
    (let ((world (current-world)))
      (if (not showing)
          '()
        (let ((path (get-path~ showing))
              (bounds (get-bounds~ showing)))
          (define (collect-animations)
            (let ((animations (get-animations~ showing)))
              (if (not animations)
                  (list #f)
                (cons #f (sort di<? (table-keys animations))))))
          
          (let ((spacing (showcase-spacing))
                (width (cuboid-width bounds))
                (height (cuboid-height bounds))
                (scale .25)
                (x (showcase-x))
                (y (showcase-y))
                (z 0.))
            (map (lambda (animation)
                   ;; ignore depth
                   (let ((max (max width height)))
                     (let ((scale (if (> max 1.) (/ 1. max) 1.)))
                       (let ((entity (new Entity path: path position: (vertex x y z) scale: (vertex scale scale scale) animate?: #t)))
                         (let ((lookat (get-lookat~ entity)))
                           (rotate-lookat! lookat PI/2 (get-up~ lookat))
                           (update-matrix~ entity))
                         (set-animation~ entity animation)
                         (transition-morphing~ entity animation)
                         (increase! z spacing)
                         entity))))
                 (collect-animations)))))))
  
  
  (method override (showcase-selection entities)
    (define (determine-selection animation)
      (find-if (lambda (entity)
                 (eq? animation (get-animation~ entity)))
               entities))
    
    (let ((entity (showcase-entity)))
      (and entity (determine-selection (get-animation~ entity)))))


  (method override (draw-element entity)
    (draw-entity~ entity))
  
  
  (method override (draw-selection)
    (when selection
      (draw-actor-target~ selection)))
  
  
  (method override (selection-addable?)
    #t)
  
  
  (method override (selection-update selection)
    (let ((world (current-world)))
      (let ((entity (first-target~ world))
            (animation (get-animation~ selection)))
        (set-animation~ entity animation)
        (transition-morphing~ entity animation))))))

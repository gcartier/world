(module world.interface.menu jazz


(import (jazz.component)
        (jazz.graphic)
        (jazz.markup)
        (jazz.ui)
        (jazz.view)
        (world)
        (world.autoload)
        (world.context)
        (world.interface.panel)
        (world.syntax (phase syntax)))


(definition public (open-menu menu)
  (let ((interface (current-interface))
        (world (current-world)))
    (let ((panel (new World-Menu parent: interface size: (nu+ (get-size menu) {Dimension 2 2}) location: 'center layout-type: 'border)))
      (let ((content (locate panel 'content)))
        (set-parent menu content))
      (layout-view interface)
      (set-interface? world #t)
      (focus-default panel)
      panel)))


(definition public (top-menu)
  (let ((interface (current-interface))
        (world (current-world)))
    (find-if (lambda (obj) (is? obj World-Menu)) (get-children interface) reversed?: #t)))


;;;
;;;; World-Menu
;;;


(class World-Menu extends World-Panel
  
  
  (form
    (<install>
      (<Border-View> name: content location: center border-type: edge style: entry layout-type: fill background: {Color red: .000 green: .000 blue: .000 alpha: .450})))))

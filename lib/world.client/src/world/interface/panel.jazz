(module world.interface.panel jazz


(import (jazz.jml)
        (jazz.graphic)
        (world)
        (world.autoload)
        (world.context)
        (world.interface.pane)
        (world.syntax (phase syntax)))


(definition public (top-panel)
  (let ((interface (current-interface))
        (world (current-world)))
    (find-if (lambda (obj) (is? obj World-Panel)) (get-children interface) reversed?: #t)))


;;;
;;;; World-Panel
;;;


(class World-Panel extends World-Pane
  
  
  (form
    (<install> background: {Color red: .000 green: .000 blue: .000 alpha: .450}))))

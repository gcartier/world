(module world.interface.main jazz


(import (jazz.jml)
        (jazz.graphic)
        (jazz.graphic.opengl.glew)
        (jazz.library)
        (jazz.literals)
        (jazz.platform)
        (jazz.platform.cairo)
        (jazz.system)
        (jazz.ui)
        (jazz.ui.view)
        (world)
        (world.client)
        (world.client.actions)
        (world.interface)
        (world.interface.frame))


(class World-Main-Menu extends Menu
  
  
  (form
    (<install>          title: "Help" display-shortcuts?: #f
      (<Label-Item>     title: "Video Options" action-handler: {Action world-interface video-options})
      (<Label-Item>     title: "Audio Options" action-handler: {Action world-interface audio-options})
      (<Label-Item>     title: "Interface Options" action-handler: {Action world-interface interface-options})
      (<Label-Item>     title: "Key Bindings" action-handler: {Action world-interface bindings-viewer})
      (<Separator-Item>)
      (<Label-Item>     title: "News" action-handler: {Action world-interface view-news})
      (<Label-Item>     title: "Roadmap" action-handler: {Action world-interface view-roadmap})
      (<Label-Item>     title: "Help" action-handler: {Action world-interface view-help})
      (<Separator-Item>)
      (<Label-Item>     title: "Exit Game" action-handler: {Action world-interface exit-world})
      (<Separator-Item>)
      (<Label-Item>     title: "Resume Game" action-handler: {Action world-anonymous resume-world})))))

;;;; World Info Frame
;;;


(module world.interface.info jazz


(import (jazz.graphic)
        (jazz.graphic.opengl.glew)
        (jazz.library)
        (jazz.literals)
        (jazz.platform)
        (jazz.platform.cairo)
        (world)
        (world.interface)
        (world.interface.pane)
        (world.texture))


(class Info-Pane extends World-Pane
  
  
  (method override (draw surface context)
    (set-font~ surface {Font font-name: "Courier New" point-size: 10 antialias: none})
    (set-color~ surface {Color Red})
    (let ((rank 0))
      (for-each (lambda (info)
                  (draw-text~ surface 10 (+ 10 (* rank 15)) (->string info))
                  (increase! rank))
                (debug-info~ world))))))

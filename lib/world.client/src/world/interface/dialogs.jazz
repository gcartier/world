;;;; World Dialogs
;;;


(module world.interface.dialogs jazz


(import (jazz.jml)
        (jazz.geometry)
        (jazz.graphic)
        (jazz.library)
        (jazz.literals)
        (jazz.ui)
        (jazz.ui.window)
        (world)
        (world.interface)
        (world.interface.frame))


(definition public (open-dialog view (title: title #f))
  (let ((interface (get-interface~ world)))
    (let ((pane (new World-Dialog parent: interface size: {Dimension 420 200} location: 'center layout-type: 'border)))
      (when title
        (set-title~ (locate~ pane 'caption) title))
      (let ((content (locate~ pane 'content)))
        (set-layout-type~ content 'center)
        (set-parent~ view content))
      (layout-view~ interface)
      (focus-default~ pane))))


;;;
;;;; World-Dialog
;;;


(class World-Dialog extends World-Frame))

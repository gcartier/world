(module world.interface.host jazz


(import (jazz.jml)
        (jazz.graphic)
        (jazz.graphic.opengl.glew)
        (jazz.library)
        (jazz.literals)
        (jazz.platform)
        (jazz.platform.cairo)
        (jazz.system)
        (jazz.ui)
        (jazz.ui.view)
        (world)
        (world.autoload)
        (world.client)
        (world.client.actions)
        (world.interface)
        (world.interface.frame)
        (world.option)
        (world.syntax (phase syntax)))


(definition public (open-host guest (host-title: host-title #f))
  (let ((world (current-world))
        (title (or host-title (host-title~ (class-of guest))))
        (size (host-size~ (class-of guest))))
    (let ((interface (get-interface~ world))
          (host (new World-Host size: (nu+ size {Dimension 0 20}) location: 'center)))
      (when host-title
        (set-title~ (get-caption~ host) title))
      (set-parent~ host interface)
      (layout-view~ interface)
      (set-interface?~ world #t)
      (set-parent~ guest (get-content~ host))
      (focus-default~ guest)
      (set-%h host)
      (set-%g guest)
      (set-%c (locate~ host 'content)))))


;;;
;;;; Host
;;;


(class World-Host extends World-Frame
  
  
  (form
    (<install>
      (<content~> background: {Color Medium} layout-type: fill)))))

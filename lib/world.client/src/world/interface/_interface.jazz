(module world.interface jazz


(import (jazz.graphic)
        (jazz.graphic.opengl.glew)
        (jazz.library)
        (jazz.literals)
        (jazz.platform)
        (jazz.platform.cairo))


(class World-Interface extends Component
  
  
  (method (draw-interface)
    (for-each (lambda (pane)
                (when (get-visible?~ pane)
                  (draw-pane~ pane)))
              children))))

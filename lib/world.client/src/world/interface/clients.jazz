(module world.interface.clients jazz


(import (jazz.graphic)
        (jazz.jml)
        (jazz.jrm.protocol)
        (jazz.tree)
        (world)
        (world.autoload)
        (world.io)
        (world.interface.frame)
        (world.interface.tiers)
        (world.syntax (phase syntax))
        (world.task)
        (world.window))


(class Client-Open extends Tier-Open
  
  
  (form
    (<install>
      (<caption~> title: "Clients")))
  
  
  (method override (form-model form)
    (case (get-name~ form)
      ((zones) Clients-View)
      (else (nextmethod form)))))


;;;
;;;; Clients-View
;;;


(class Clients-View extends Tiers-View

  
  ;;;
  ;;;; Open
  ;;;
  
  
  (method override (open-file file)
    (let ((zone (current-zone)))
      (client-open~ zone file)))
  
  
  ;;;
  ;;;; Update
  ;;;
  
  
  (method override (view-tiers)
    (update-tiers 'client))))

(module world.interface.clients jazz


(import (jazz.jml)
        (world)
        (world.autoload)
        (world.context)
        (world.interface.tiers)
        (world.syntax (phase syntax)))


(class Client-Open extends Tier-Open
  
  
  (form
    (<install>
      (<caption~> title: "Clients")))
  
  
  (method override (form-model self form)
    (case (get-name form)
      ((zones) Clients-View)
      (else (nextmethod self form)))))


;;;
;;;; Clients-View
;;;


(class Clients-View extends Tiers-View

  
  ;;;
  ;;;; Open
  ;;;
  
  
  (method override (open-log-file self file)
    (let ((zone (current-zone)))
      (client-open zone file)))
  
  
  ;;;
  ;;;; Update
  ;;;
  
  
  (method override (view-tiers self)
    (update-tiers self 'client))))

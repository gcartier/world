(class Mesh-Texture-Program extends Mesh-Program
  
  
  (slot texture-uniform)
  @wait-non-uniform-size-is-really-slow-on-mac
  (slot texture_bounds-uniform)
  (slot texture_coord-attribute)
  
  
  (method override (prepare)

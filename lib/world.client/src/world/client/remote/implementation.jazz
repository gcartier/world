(module world.client.remote.implementation jazz


(import (jazz.syntax (phase syntax))
        (world)
        (world.autoload)
        (world.support)
        (world.syntax (phase syntax))
        (world.task))


(definition (with-client-tier proc)
  (with-task-mutex
    (lambda ()
      (let ((tier (current-tier+)))
        (when (and tier
                   (is? tier Client-Tier)
                   (not shutdown?)
                   (not being-debugged?))
          (continuation-capture
            (lambda (exit)
              (parameterize ((current-exit exit))
                (proc tier)))))))))


(class World-Remote-Client extends Object
  
  
  (method public (server-entered client-id client-no character-name character-avatar character-script player-id player-position player-lookat player-script)
    (with-client-tier
      (lambda (tier)
        (server-entered~ tier client-id client-no character-name character-avatar character-script player-id player-position player-lookat player-script))))
  
  
  (method public (server-exited character-name)
    (with-client-tier
      (lambda (tier)
        (server-exited~ tier character-name))))
  
  
  (method public (server-update sent changes)
    (with-client-tier
      (lambda (tier)
        (server-update~ tier sent changes))))
  
  
  (method public (server-audio id buffer timestamp duration)
    (with-client-tier
      (lambda (tier)
        (server-audio~ tier id buffer timestamp duration))))
  
  
  (method public (server-video id buffer timestamp duration)
    (with-client-tier
      (lambda (tier)
        (server-video~ tier id buffer timestamp duration))))
  
  
  (method public (server-message sender kind message)
    (with-client-tier
      (lambda (tier)
        (server-message~ tier sender kind message))))
  
  
  (method public (server-protocol protocol)
    (with-client-tier
      (lambda (tier)
        (server-protocol~ tier protocol))))
  
  
  (method public (detach-client)
    (with-client-tier
      (lambda (tier)
        (detach-client~ tier))))
  
  
  (method public (pause-client)
    (with-client-tier
      (lambda (tier)
        (pause-client~ tier))))
  
  
  (method public (unpause-client)
    (with-client-tier
      (lambda (tier)
        (unpause-client~ tier))))
  
  
  (method public (goto-client time)
    (with-client-tier
      (lambda (tier)
        (goto-client~ tier time))))
  
  
  (method public (camera-client pos lookat)
    (with-client-tier
      (lambda (tier)
        (camera-client~ tier pos lookat))))
  
  
  (method public (protocol-client simulate?)
    (with-client-tier
      (lambda (tier)
        (protocol-client~ tier simulate?))))
  
  
  (method public (position-client rect)
    (with-client-tier
      (lambda (tier)
        (position-client~ tier rect))))
  
  
  (method public (restore-client)
    (with-client-tier
      (lambda (tier)
        (restore-client~ tier))))))

(module world.client.remote.implementation jazz


(import (jazz.application)
        (world)
        (world.autoload)
        (world.syntax (phase syntax))
        (world.task))


(class World-Remote-Client extends Object
  
  
  (method public (get-name)
    (get-player-name~ (get-application)))
  
  
  (method public (server-update players)
    (with-task-mutex
      (lambda ()
        (server-update~ (get-application) players))))
  
  
  (method public (server-enter player-name player-avatar player-position player-lookat)
    (with-task-mutex
      (lambda ()
        (server-enter~ (get-application) player-name player-avatar player-position player-lookat))))
  
  
  (method public (server-exit player-name)
    (with-task-mutex
      (lambda ()
        (server-exit~ (get-application) player-name))))
  
  
  (method public (server-tick player-commands time elapse)
    (with-task-mutex
      (lambda ()
        (server-tick~ (get-application) player-commands time elapse))))
  
  
  (method public (server-test argument)
    (with-task-mutex
      (lambda ()
        (server-test~ (get-application) argument))))))

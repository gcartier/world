(module world.client.remote.implementation jazz


(import (jazz.application)
        (world)
        (world.autoload)
        (world.syntax (phase syntax))
        (world.task))


(class World-Remote-Client extends Object
  
  
  (method public (get-name)
    (get-player-name~ (get-application)))
  
  
  (method public (server-player player-name player-avatar player-position player-lookat)
    (with-task-mutex
      (lambda ()
        (server-player~ (get-application) player-name player-avatar player-position player-lookat))))
  
  
  (method public (server-entered player-name player-avatar player-position player-lookat)
    (with-task-mutex
      (lambda ()
        (server-entered~ (get-application) player-name player-avatar player-position player-lookat))))
  
  
  (method public (server-exited player-name)
    (with-task-mutex
      (lambda ()
        (server-exited~ (get-application) player-name))))
  
  
  (method public (server-update changes)
    (with-task-mutex
      (lambda ()
        (server-update~ (get-application) changes))))))

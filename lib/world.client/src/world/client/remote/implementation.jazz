;;;; World Remote Client Implementation
;;;


(module world.client.remote.implementation jazz


(import (jazz.debuggee)
        (jazz.system)
        (jazz.ui.window)
        (world)
        (world.stub))


(class World-Remote-Client extends Object
  
  
  (method public (get-name)
    (get-player-name~ (get-application)))
  
  
  (method public (world-enter player-client player-name)
    (execute-event
      (lambda ()
        (world-enter~ world player-client player-name))))
  
  
  (method public (world-exit player-client player-name)
    (execute-event
      (lambda ()
        (world-exit~ world player-client player-name))))
  
  
  (method public (server-tick commands elapse)
    (execute-event
      (lambda ()
        (server-tick~ world commands elapse))))))

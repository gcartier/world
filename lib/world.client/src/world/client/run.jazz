;;;; World Client Run
;;;


(module world.client.run jazz


(import (jazz.graphic.opengl)
        (jazz.io)
        (jazz.system)
        (jazz.ui)
        (jazz.ui.window)
        (world.client)
        (world.client.appl)
        (world.window))


(definition (run descriptor)
  (initialize-aliases)
  (random-seed)
  (set-cursor :arrow)
  (parameterize ((run-loop? #f))
    (boot-environment~ (new World-Application)))
  (setup-world-window (new-opengl-window class: World-Window width: 800 height: 600))
  (select-live)
  (run-loop~ (get-application)))


(register-product-run 'world.client
  run))

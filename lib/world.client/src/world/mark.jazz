;;;
;;;; World Marks
;;;


(module world.mark jazz


(import (jazz.graphic)
        (jazz.graphic.opengl.glew)
        (world)
        (world.draw)
        (world.geometry))


;;;
;;;; Mark
;;;


(class Mark extends Object
  
  
  (slot vertex <f32vector> initialize #f accessors generate)
  (slot color  <Color+>    initialize #f accessors generate)
  
  
  (method override (initialize vertex (color: color #f))
    (nextmethod)
    (set! vertex~self (copy-vertex vertex))
    (set! color~self color))
  
  
  (method (draw-mark)
    (let ((x (vertex-x vertex))
          (y (vertex-y vertex))
          (z (vertex-z vertex))
          (size 2.))
      (glDisable GL_DEPTH_TEST)
      (glDisable GL_LIGHTING)
      (glBegin GL_LINES)
      (gl-colorize (or color {Color Red}))
      (glVertex3f (- x size) y z)
      (glVertex3f (+ x size) y z)
      (gl-colorize (or color {Color Green}))
      (glVertex3f x (- y size) z)
      (glVertex3f x (+ y size) z)
      (gl-colorize (or color {Color Blue}))
      (glVertex3f x y (- z size))
      (glVertex3f x y (+ z size))
      (glEnd)
      (glEnable GL_LIGHTING)
      (glEnable GL_DEPTH_TEST)))))

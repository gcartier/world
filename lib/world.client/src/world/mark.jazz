;;;
;;;; World Marks
;;;


(module world.mark jazz


(import (jazz.graphic)
        (jazz.graphic.opengl.glew)
        (world)
        (world.draw)
        (world.dyes)
        (world.geometry)
        (world.opengl))


;;;
;;;; Mark
;;;


(class Mark extends Object
  
  
  (slot draw   <object>     initialize #f accessors generate)
  (slot vertex <f32vector>  initialize #f accessors generate)
  (slot color  <f32vector+> initialize #f accessors generate)
  
  
  (method override (initialize draw/vertex (color: color #f))
    (nextmethod)
    (if (procedure? draw/vertex)
        (set! draw~self draw/vertex)
      (set! vertex~self (copy-vertex draw/vertex)))
    (set! color~self color))
  
  
  (method (draw-mark)
    (if draw
        (draw)
      (let ((x (vertex-x vertex))
            (y (vertex-y vertex))
            (z (vertex-z vertex))
            (size 2.))
        (glDisable GL_DEPTH_TEST)
        (glDisable GL_LIGHTING)
        (glBegin GL_LINES)
        (gl-colorize-dye (or color red-dye))
        (glVertex3f (- x size) y z)
        (glVertex3f (+ x size) y z)
        (gl-colorize-dye (or color green-dye))
        (glVertex3f x (- y size) z)
        (glVertex3f x (+ y size) z)
        (gl-colorize-dye (or color blue-dye))
        (glVertex3f x y (- z size))
        (glVertex3f x y (+ z size))
        (glEnd)
        (glEnable GL_LIGHTING)
        (glEnable GL_DEPTH_TEST))))))

(module world.configure jazz


(import (world.settings))


(definition public priority-boost <fl>
  100.)


(definition default-audio-priority    10.)
(definition default-event-priority    9.)
(definition default-message-priority  9.)
(definition default-player-priority   5.)
(definition default-render-priority   3.)
(definition default-tick-priority     3.)
(definition default-redstone-priority 2.)
(definition default-lava-priority     2.)
(definition default-water-priority    2.)
(definition default-sun-priority      1.)
(definition default-spawn-priority    1.)
(definition default-generate-priority 0.)


(definition public heartbeat-interval <fl+>
  (world-setting 'world.heartbeat-interval #f))

(definition public quantum-interval <fl+>
  (world-setting 'world.quantum-interval #f))

(definition public event-priority <fl>
  (world-setting 'world.event-priority default-event-priority))

(definition public message-priority <fl>
  (world-setting 'world.message-priority default-message-priority))

(definition public message-max <fl>
  (world-setting 'world.message-max 60.))

(definition public message-rate <fl>
  (/ 1. message-max))

(definition public render-priority <fl>
  (world-setting 'world.render-priority default-render-priority))

;; the cond-expand are a quick solution until smarter resource management
(definition public render-max-idle <fl>
  (cond-expand
    (release (world-setting 'world.render-max-idle 60.))
    (else 20.)))

(definition public render-max-busy <fl>
  (cond-expand
    (release (world-setting 'world.render-max-busy 60.))
    (else 20.)))

(definition public render-max-idle-generate <fl>
  (cond-expand
    (release (world-setting 'world.render-max-idle-generate 30.))
    (else 15.)))

(definition public render-max-busy-generate <fl>
  (cond-expand
    (release (world-setting 'world.render-max-busy-generate 30.))
    (else 15.)))

(definition public render-max-inactive <fl>
  (cond-expand
    (release (world-setting 'world.render-max-inactive 15.))
    (else 10.)))

(definition public render-rate-idle <fl>
  (/ 1. render-max-idle))

(definition public render-rate-busy <fl>
  (/ 1. render-max-busy))

(definition public render-rate-idle-generate <fl>
  (/ 1. render-max-idle-generate))

(definition public render-rate-busy-generate <fl>
  (/ 1. render-max-busy-generate))

(definition public render-rate-inactive <fl>
  (/ 1. render-max-inactive))

(definition public camera-stable-delay <fl>
  (world-setting 'world.camera-stable-delay .1))

(definition public generate-priority <fl>
  (world-setting 'world.generate-priority default-generate-priority))

(definition public generate-spread <fl>
  (world-setting 'world.generate-spread 50.))

(definition public player-priority <fl>
  (world-setting 'world.player-priority default-player-priority))

(definition public player-max <fl>
  (world-setting 'world.player-max 60.))

(definition public player-rate <fl>
  (/ 1. player-max))

(definition public tick-priority <fl>
  (world-setting 'world.tick-priority default-tick-priority))

(definition public tick-max <fl>
  (world-setting 'world.tick-max 60.))

(definition public tick-rate <fl>
  (/ 1. tick-max))

(definition public sun-priority <fl>
  (world-setting 'world.sun-priority default-sun-priority))

(definition public spawn-priority <fl>
  (world-setting 'world.spawn-priority default-spawn-priority))

(definition public redstone-priority <fl>
  (world-setting 'world.redstone-priority default-redstone-priority))

(definition public lava-priority <fl>
  (world-setting 'world.lava-priority default-lava-priority))

(definition public water-priority <fl>
  (world-setting 'world.water-priority default-water-priority))

(definition public audio-priority <fl>
  (world-setting 'world.audio-priority default-audio-priority))

(definition public sun-max <fl>
  (world-setting 'world.sun-max 60.))

(definition public sun-rate <fl>
  (/ 1. sun-max))

(definition public spawn-max <fl>
  (world-setting 'world.spawn-max 20.))

(definition public spawn-rate <fl>
  (/ 1. spawn-max))

(definition public redstone-max <fl>
  (world-setting 'world.redstone-max 20.))

(definition public redstone-rate <fl>
  (/ 1. redstone-max))

(definition public lava-max <fl>
  (world-setting 'world.lava-max (/ 2. 3.)))

(definition public lava-rate <fl>
  (/ 1. lava-max))

(definition public water-max <fl>
  (world-setting 'world.water-max 2.))

(definition public water-rate <fl>
  (/ 1. water-max))

(definition public audio-max <fl>
  (world-setting 'world.audio-max 10.))

(definition public audio-rate <fl>
  (/ 1. audio-max))


(definition public log? <bool>
  (world-setting 'world.log? #t))

(definition public log-heartbeat? <bool>
  (world-setting 'world.log-heartbeat? log?)))

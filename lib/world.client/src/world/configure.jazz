(module world.configure jazz


(import (jazz.system)
        (world.settings))


(assert (get-application))


(definition public render-max-idle <fl>
  (world-setting 'world.render-max-idle 60.))

(definition public render-max-busy <fl>
  (world-setting 'world.render-max-busy 60.))

(definition public render-max-idle-generate <fl>
  (world-setting 'world.render-max-idle-generate 10.))

(definition public render-max-busy-generate <fl>
  (world-setting 'world.render-max-busy-generate 60.))

(definition public render-rate-idle <fl>
  (/ 1. render-max-idle))

(definition public render-rate-busy <fl>
  (/ 1. render-max-busy))

(definition public render-rate-idle-generate <fl>
  (/ 1. render-max-idle-generate))

(definition public render-rate-busy-generate <fl>
  (/ 1. render-max-busy-generate))

(definition public render-generate-threshold <fx>
  (world-setting 'world.render-generate-threshold 5))

(definition public render-stable-delay <fl>
  (world-setting 'world.render-stable-delay .5))

(definition public generate-threaded? <bool>
  (world-setting 'world.generate-threaded? #t))

(definition public generate-max <fx>
  (world-setting 'world.generate-max 200))

(definition public generate-max-idle <fx>
  (fxround (/ (cast <fl> generate-max) render-max-idle-generate)))

(definition public generate-max-busy <fx>
  (fxround (/ (cast <fl> generate-max) render-max-busy-generate)))

(definition public player-task? <bool>
  (world-setting 'world.player-task? #t))

(definition public player-max <fl>
  (world-setting 'world.player-max 60.))

(definition public player-rate <fl>
  (/ 1. player-max))

(definition public tick-task? <bool>
  (world-setting 'world.tick-task? #t))

(definition public tick-max <fl>
  (world-setting 'world.tick-max 60.))

(definition public tick-rate <fl>
  (/ 1. tick-max))

(definition public sun-task? <bool>
  (world-setting 'world.sun-task? #t))

(definition public sun-max <fl>
  (world-setting 'world.sun-max 60.))

(definition public sun-rate <fl>
  (/ 1. sun-max))


(definition public log? <bool>
  (world-setting 'world.log? #t 'default))

(definition public log-heartbeat? <bool>
  (world-setting 'world.log-heartbeat? log? 'default)))

(module world.configure jazz


(import (world.settings))


(definition public priority-boost <fl>
  100.)


;; quick hack to let system threads have higher priority
;; as I would much rather set their priorities explicitly
(definition (lower-priority priority)
  (- priority 20.))


(definition default-audio-priority         (lower-priority 10.))
(definition default-music-priority         (lower-priority 10.))
(definition default-event-priority         (lower-priority 9.))
(definition default-message-priority       (lower-priority 9.))
(definition default-network-priority       (lower-priority 7.))
(definition default-alive-priority         (lower-priority 7.))
(definition default-eat-priority           (lower-priority 6.))

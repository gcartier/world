;;;
;;;; World Window
;;;


(module world.window jazz


(import (jazz.graphic)
        (jazz.graphic.opengl)
        (jazz.graphic.opengl.platform)
        (jazz.library)
        (jazz.literals)
        (jazz.platform)
        (jazz.platform.cairo)
        (jazz.ui)
        (jazz.ui.window)
        (world))


(class World-Window extends OpenGL-Window
  
  
  (slot world <World> initialize #f accessors generate)
  
  
  (method override (destroy)
    (destroy~ world)
    (nextmethod))
  
  
  ;;;
  ;;;; Scene
  ;;;
  
  
  (method override (draw-scene)
    (draw-world~ world))
  
  
  ;;;
  ;;;; Events
  ;;;

  
  (method override (cursor-update hit)
    (if hit
        (cursor-update~ world)
      (nextmethod hit)))
  
  
  (method override (mouse-down h v)
    (bring-to-front)
    (acquire-capture)
    (acquire-focus)
    (mouse-down~ world h v))
  
  
  (method override (mouse-move h v)
    (mouse-move~ world h v))
  
  
  (method override (mouse-up h v)
    (release-capture)
    (mouse-up~ world h v))
  
  
  (method override (right-mouse-down h v)
    (acquire-capture)
    (right-mouse-down~ world h v))
  
  
  (method override (right-mouse-up h v)
    (release-capture)
    (right-mouse-up~ world h v))
  
  
  (method override (mouse-wheel h v delta)
    (mouse-wheel~ world h v delta))
  
  
  (method override (key-down code)
    (key-down~ world code))
  
  
  (method override (key-press c)
    (key-press~ world c))
  
  
  @w
  (method (set-fullscreen? flag)
    (set! fullscreen? flag)
    (if fullscreen?
        (begin
          (set-fullscreen-mode)
          (set-position {Point 0 0})
          (set-size {Dimension 640 480}))
      (reset-fullscreen-mode)))))

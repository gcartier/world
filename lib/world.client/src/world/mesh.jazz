;;;
;;;; World Meshes
;;;


(module world.mesh jazz


(import (jazz.geometry)
        (jazz.graphic)
        (jazz.graphic.opengl.glew)
        (jazz.io)
        (jazz.library)
        (jazz.literals)
        (jazz.media)
        (jazz.network)
        (jazz.platform)
        (jazz.platform.cairo)
        (jazz.runtime)
        (jazz.system)
        (jazz.ui)
        (jazz.ui.dialog)
        (jazz.ui.window)
        (world)
        (world.buffer)
        (world.foreign)
        (time))


;;;
;;;; Mesh
;;;


(class Mesh extends Object
  
  
  (slot vertex-buffer <Buffer> initialize #f getter generate)
  (slot material      <object> initialize #f accessors generate)
  
  
  (method override (initialize (material: material #f))
    (set! vertex-buffer~self (new Buffer))
    (set! material~self material))
  
  
  (method public (bind)
    (bind~ vertex-buffer))
  
  (method public (unbind)
    (unbind~ vertex-buffer))
  
  
  (method public (empty?)
    (empty?~ vertex-buffer))
  
  
  (method public (set-vbo content)
    (set-vbo~ vertex-buffer content))

  
  (method public (draw)
    (draw~ vertex-buffer))
  
  
  (method public (generate-buffer)
    (generate-buffer~ vertex-buffer))
  
  
  (method public (clear-buffer)
    (clear-buffer~ vertex-buffer))
  
  
  (method public (free-resources)
    (free-resources~ vertex-buffer))
  
  
  (method override (destroy)
    (free-resources))))

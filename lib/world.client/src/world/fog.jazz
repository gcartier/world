(module world.fog jazz


(import (jazz.graphic)
        (gaea.dye))


(definition public default-fog-color
  {Color red: 0.8 green: 0.8 blue: 0.8 alpha: 1.0})


(definition public fog?
  #t)

(definition public (set-fog? flag)
  (set! fog? flag))


(definition public fog-color
  #t)

(definition public (set-fog-color color)
  (set! fog-color (if (dye? color)
                      color
                    (color->dye color))))


(definition public fog-near
  85.)

(definition public (set-fog-near near)
  (set! fog-near near))


(definition public fog-far
  105.)

(definition public (set-fog-far far)
  (set! fog-far far))


(definition protected (setup-fog-near/far view-distance)
  (let ((max (* 16. (cast <fl> view-distance))))
    (set! fog-near (percent 76. max))
    (set! fog-far (percent 120. max)))))

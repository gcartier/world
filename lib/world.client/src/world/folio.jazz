(module world.folio jazz


(import (world.syntax (phase syntax)))


;;;
;;;; Folio
;;;


(class Folio extends Object
  
  
  (slot current accessors generate)
  (slot list    accessors generate)
  
  
  (method override (initialize current list)
    (nextmethod)
    (set! current~self current)
    (set! list~self list))
  
  
  (method override (print output readably)
    (print-unreadable self output
      (lambda (output)
        (format output "{a} {a}" current list))))))

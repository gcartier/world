;;;==============
;;;  JazzScheme
;;;==============
;;;
;;;; World
;;;


(module world jazz


(import (jazz.version))


;;;
;;;; Version
;;;


(definition public world-version
  {Version 1 1})


;;;
;;;; Window
;;;


(definition public world-window
  #f)


(definition public (set-world-window window)
  (set! world-window window)
  (set-?w window))


;;;
;;;; World
;;;


(definition public world
  #f)


(definition public (set-world wrl)
  (set! world wrl)
  (set-? world))


;;;
;;;; Zone
;;;


(definition public zone
  #f)


(definition public (set-zone zn)
  (set! zone zn)
  (set-?z zone))


;;;
;;;; Player
;;;


(definition public player
  #f)

(definition public player-name
  #f)


(definition public (set-player ply)
  (set! player ply)
  (set-?p player))


(definition public (set-player-name name)
  (set! player-name name)))

(module world.contour jazz


(class Contour extends Object
  
  
  (slot name      getter generate)
  (slot signature getter generate)
  
  
  (method override (initialize name signature)
    (set! name~self name)
    (set! signature~self signature))
  
  
  (method override (print output readably)
    (print-unreadable self output
      (lambda (output)
        (format output "{a}" name)))))


(definition protected contours <table>
  (make-table test: eq?))


(definition public (registered-contours)
  contours)


(definition public (register-contour signature)
  (let ((name (if (symbol? signature) signature (car signature))))
    (let ((contour (new Contour name signature)))
      (table-set! contours name contour)
      (unspecified))))


(definition public (registered-contour name)
  (table-ref contours name #f)))

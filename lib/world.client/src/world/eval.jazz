(import (world)
        (world.autoload)
        (world.dyes)
        (world.evaluate)
        (world.fog)
        (world.geometry)
        (world.syntax (phase syntax)))


;;;
;;;; World
;;;


(set-ambient-gravity~ ? (vertex 0. -.018 0.))
(set-jump-impulsion~ ? .4)


@w
(set-fog? #t)
@w
(let ((world (current-world)))
  (set-fog-density .003)
  (setup-fog~ world))
@w
(let ((world (current-world)))
  (set-fog-color {Color red: 0.8 green: 0.8 blue: 0.8 alpha: 1.0})
  (setup-fog~ world))



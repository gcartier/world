(module world.face jazz


(import (jazz.geometry)
        (jazz.graphic)
        (jazz.graphic.opengl.glew)
        (jazz.io)
        (jazz.library)
        (jazz.literals)
        (jazz.media)
        (jazz.network)
        (jazz.platform)
        (jazz.platform.cairo)
        (jazz.runtime)
        (jazz.system)
        (jazz.ui)
        (jazz.ui.dialog)
        (jazz.ui.window)
        (world)
        (world.foreign)
        (world.geometry)
        (world.texture)
        (time))


(definition public (make-face texture texture-coordinates polygon)
  (new Face texture texture-coordinates polygon))


;;;
;;;; Face
;;;


(class Face extends Object
  
  
  (slot texture             accessors generate)
  (slot texture-coordinates accessors generate)
  (slot polygon             getter generate)
  
  
  (method override (initialize texture texture-coordinates polygon)
    (nextmethod)
    (set! texture~self texture)
    (set! texture-coordinates~self texture-coordinates)
    (set! polygon~self polygon))
  
  
  (method public (triangle-count)
    (triangle-count~ polygon))
  
  
  (method public (add-triangles add)
    (add-triangles~ polygon texture-coordinates add))))

;;;; Shader Showcase Run
;;;


(module world.showcase.shader.run jazz


(import (jazz.graphic.opengl.platform)
        (jazz.graphic.opengl.glew)
        (jazz.io)
        (jazz.system)
        (jazz.ui)
        (jazz.ui.window)
        (world.client.appl)
        (world.showcase.shader.window))


(definition (run descriptor)
  (initialize-aliases)
  (random-seed)
  (set-cursor :arrow)
  (parameterize ((run-loop? #f))
    (boot-environment~ (new World-Application)))
  (new-opengl-window class: Shader-Showcase-Window fullscreen?: (shift-down?) width: 320 height: 320)
  (run-loop~ (get-application)))


(register-product-run 'world.showcase.shader
  run))

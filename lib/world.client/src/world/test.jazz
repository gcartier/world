(definition test
  (let ((before (make-f64vector 1))
        (after (make-f64vector 1))
        (iterations 10000))
    (lambda ()
      (bytes-allocated! before 0)
      (loop (for i from 0 below iterations)
            (baz))
      (bytes-allocated! after 0)
      (/ (- (f64vector-ref after 0) (f64vector-ref before 0)) iterations))))



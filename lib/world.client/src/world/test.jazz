(definition (recalculate-lightmaps)
  (invalidate-lightmaps~ zone #f)
  (update-lightmaps~ zone)
  (iterate-sectors-with-tiles~ zone
    (lambda (index sector)
      (update-vertices~ sector)
      (set-lightmap-uptodate?~ sector #f)
      (update-lightmap~ sector))))



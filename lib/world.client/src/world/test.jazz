(definition public (test1-world)
  (define (polygon-iterator proc)
    (for-each (lambda (tile)
                (for-each-triangle~ tile
                  (lambda (face triangle)
                    (proc triangle))))
              (get-tiles~ zone)))
  
  (time (let ((movement (new Movement (copy-vertex (get-eye~ world)) (vertex-scalar* (get-sight~ (get-eye-lookat~ world)) 50.))))
    (receive (cl hit) (collide-and-slide 1.
                                         polygon-iterator
                                         movement
                                         #f
                                         #f)
      (debug hit)
      @w
      (debug cl hit)))))



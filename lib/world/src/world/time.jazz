(module world.time jazz


(class Time-Base extends Object
  
  
  (slot base getter generate)
  
  
  (method override (initialize self)
    (nextmethod self)
    (set! self.base #f))
  
  
  (method override (print self output readably)
    (print-unreadable self output
      (lambda (output)
        (format output "{a}" base))))
  
  
  (method public (update-time self new-local new-remote)
    (let ((new-base (- new-local new-remote)))
      (if (not base)
          (set! base new-base)
        (let ((change (- new-base base))
              (effective-change -.01))
          (when (< change effective-change)
            (let ((effective-base (+ base effective-change)))
              (set! base effective-base)))))))
  
  
  (method public (update-start self new-local new-remote)
    (when (not base)
      (let ((new-base (- new-local new-remote)))
        (set! base new-base))))
  
  
  (method public (remote->local self remote)
    (+ base remote))))

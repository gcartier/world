  (method (teleport pos (sight #f))
    (let ((world (current-world))
          (me (current-me)))
      (let ((eye (get-eye~ world)))
        (person-motion~ world feedback?: #f)
        (set-position~ me pos)
        (cond ((not sight)
               (derive-target~ eye)
               (camera-update~ eye))
              (else
               (set-lookat~ me (horizon-lookat sight))
               (eye-behind-player~ world)
               (follow-player~ world))))))
  
  
  (method (explode-blocks tnts blocks)

          (radius .7))
      (let ((left (- x radius))
            (bottom (- y radius))
            (back (- z radius))
            (right (+ x radius))
            (top (+ y radius))
            (front (+ z radius)))
        (continuation-capture
          (lambda (return)
            (with-area-retainer 'element-near
              (lambda (retain)
                (iterate-position-neighbor-areas vert 1 #f
                  (lambda (area index retain?)
                    (when retain?
                      (retain area))
                    (iterate-area-elements area
                      (lambda (obj)
                        (when (and (get-visible? obj)
                                   (let ((x (get-x obj))
                                         (y (get-y obj))
                                         (z (get-z obj)))
                                     (and (>= x left)
                                          (>= y bottom)

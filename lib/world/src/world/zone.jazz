              (make-tag "SpawnX" TAG_Int (fxround (vertex-x spawnpoint)))
              (make-tag "SpawnY" TAG_Int (fxround (vertex-y spawnpoint)))
              (make-tag "SpawnZ" TAG_Int (fxround (vertex-z spawnpoint)))

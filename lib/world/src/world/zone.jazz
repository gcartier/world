            (c <fx> (vector-ref index 2)))
        (loop (for i from (- distance) to distance)
              (loop (for j from (- distance) to distance)
                    (loop (for k from (- distance) to distance)
                          (proc (coordinates-area (+ a i) (+ b j) (+ c k)))))))))
  
  

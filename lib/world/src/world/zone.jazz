  (method (stop-tasks)
    (let ((world (current-world)))
      ;; so no one waits on render
      (set-render-boost? #f)
      (stop-task 'keys)
      (set-keys-thread~ world #f)
      (stop-task 'sun)
      (stop-task 'spawn)
      (stop-task 'tick)
      (stop-task 'player)
      (set-player-thread~ world #f)
      (stop-task 'render)
      (set-render-thread~ world #f)
      (reset-content)
      (stop-task 'generate stop-generate)))
  
  

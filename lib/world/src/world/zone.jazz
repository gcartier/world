  (method (add-creature creature)
    (when (get-hostile?~ creature)
      (set-spawned-count (+ spawned-count 1))
      (set-spawned-creatures (cons creature spawned-creatures)))
    (let ((procedure
            (lambda (task)
              (creature-task~ creature task))))
      (let ((task (new Task 'creature procedure)))
        (start-task task)
        (set-task~ creature task)
        (thread-base-priority-set! (get-thread~ task) creature-priority))))
  
  
  (method (remove-creature creature)
    (when (get-hostile?~ creature)
      (let ((pos (get-spawner-position~ creature)))
        (let ((spawner (find-object (lambda (spawner)
                                      (when (equal? (get-position~ spawner) pos)
                                        spawner))
                                    spawner-list)))
          (when spawner
            (set-creature-count~ spawner (- (get-creature-count~ spawner) 1))))
        (set-spawned-count (- spawned-count 1))
        (set-spawned-creatures (remove creature spawned-creatures))))
    (let ((task (get-task~ creature)))
      (stop-task task)))
  
  

  (method (iterate-sector-neighbors sector distance <fx> proc)
    (let ((index (get-index~ sector)))
      (let ((a (index-x index))
            (b (index-y index))
            (c (index-z index)))
        (loop (for i from (- distance) to distance)
              (loop (for j from (- distance) to distance)

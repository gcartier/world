(module world.try jazz


(import (world.script.entity)
        (world.scripting)
        (world.settings)
        (world.task)
        (world.work))


(definition (try descriptor)
  (let ((code
          #/Script/
          (module toto123 script
          (%%import (script.syntax (phase syntax))
                    (world.script))
          (%%declare (proper-tail-calls)
                     (safe))
          (%%instance me
                      (let ((a 2))
                        a)))
          //#)
        (instance (new Script-Entity)))
    (continuation-capture
      (lambda (exit)
        (parameterize ((%%current-instance instance)
                       ; (current-task task)
                       (current-exit exit))
          (worker-run instance code
            ;; read
            (lambda (reason)
              (raise reason))
            ;; walk
            (lambda (reason detail)
              (raise reason))
            ;; error
            (lambda (reason location stack)
              (raise reason))
            ;; result
            (lambda (result)
              (terminal 'result result))))))))


(register-product-run 'world-try
  try))

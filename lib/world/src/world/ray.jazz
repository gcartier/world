(module world.ray jazz


(import (world.geometry))


(proclaim (warn optimizations))

(declare (optimize-dead-local-variables))


;;;
;;;; Ray
;;;


(class Ray extends Object
  
  
  (slot origin    <f64vector> initialize (make-vertex) getter generate)
  (slot direction <f64vector> initialize (make-vertex) getter generate)
  
  
  (method override (initialize orig <f64vector> dir <f64vector>)
    (set-origin orig)
    (set-direction dir))
  
  
  (method public (set-origin orig <f64vector>) <void>
    (vertex-copy! origin orig))
  
  (method public (set-direction dir <f64vector>) <void>
    (vertex-copy! direction dir)))


(definition public (make-ray orig dir)
  (new Ray orig dir)))

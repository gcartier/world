(class Minecraft-Sector extends Sector
  
  
  (method override (initialize index center)
    (nextmethod index center)
    (set! physical-uptodate? #f))
  
  
  (method override (prepare-lightmap faces)
    (define (convert-light lighting)
      (cast <fl> (expt .8 (- 60 (min 60 lighting)))))
    
    (if (not generate-lighting?)
        (nextmethod faces)
      (let ((triangles-count 0)
            (triangle-floats (* 3 3)))
        (for (i 0 (vector-length faces))
             (let ((face (vector-ref faces i)))
               (increase! triangles-count (triangle-count~ face))))
        (let ((f32 (make-f32vector (* triangles-count triangle-floats) 0.))
              (n 0))
          (for (i 0 (vector-length faces))
               (let ((face (vector-ref faces i)))
                 (iterate-lighting~ face
                   (lambda (l1 l2 l3)
                     (let ((l1 (convert-light l1))
                           (l2 (convert-light l2))
                           (l3 (convert-light l3)))
                       (f32vector-set! f32 n l1)
                       (f32vector-set! f32 (+ n 1) l1)
                       (f32vector-set! f32 (+ n 2) l1)
                       (f32vector-set! f32 (+ n 3) l2)
                       (f32vector-set! f32 (+ n 4) l2)
                       (f32vector-set! f32 (+ n 5) l2)
                       (f32vector-set! f32 (+ n 6) l3)
                       (f32vector-set! f32 (+ n 7) l3)
                       (f32vector-set! f32 (+ n 8) l3)
                       (increase! n 9))))))
          f32)))))



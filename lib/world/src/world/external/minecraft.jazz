(definition public (left-side x <fl> y <fl> z <fl> radius <fl> uv <f32vector> lighting)
  (left-face (- x radius) (+ x radius) (- y radius) (+ y radius) (- z radius) (+ z radius) uv lighting))


(definition public (left-face l <fl> r <fl> b <fl> t <fl> f <fl> n <fl> uv <f32vector> lighting)
  (let ((tl (uv-left uv))
        (tt (uv-top uv))
        (tr (uv-right uv))
        (tb (uv-bottom uv)))
    (make-minecraft-face #f
                         (f32vector tl tt tr tt tr tb tl tb)
                         (make-quad #f
                                    (vertex -1. 0. 0.)
                                    (vertex l t f) (vertex l t n) (vertex l b n) (vertex l b f))
                         (lighting -1 -1 0 1 -1 0) (lighting -1 -1 0 1 0 1) (lighting -1 -1 -1 0 0 1) (lighting -1 -1 -1 0 -1 0))))


(definition public (right-side x <fl> y <fl> z <fl> radius <fl> uv <f32vector> lighting)

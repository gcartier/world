(definition cross-normal1
  (vertex-normalize (vertex -1. 0. -1.)))

(definition cross-normal2
  (vertex-normalize (vertex 1. 0. -1.)))


(definition public (add-cross-faces center <f32vector> x <fl> y <fl> z <fl> radius <fl> uv <f32vector> lighting add-face)
  (let ((l (- x radius))
        (r (+ x radius))
        (b (- y radius))
        (t (+ y radius))
        (f (- z radius))
        (n (+ z radius))
        (tl (uv-left uv))
        (tt (uv-top uv))
        (tr (uv-right uv))
        (tb (uv-bottom uv)))
    (add-face center
              (make-minecraft-face #f
                                   (f32vector tl tt tr tt tr tb tl tb)
                                   (make-quad #f
                                              cross-normal1
                                              (vertex r t f) (vertex l t n) (vertex l b n) (vertex r b f))
                                   0 0 0 0))
    (add-face center
              (make-minecraft-face #f
                                   (f32vector tl tt tr tt tr tb tl tb)
                                   (make-quad #f
                                              cross-normal2
                                              (vertex r t n) (vertex l t f) (vertex l b f) (vertex r b n))
                                   0 0 0 0))))


(definition (add-stairs center x y z block-radius uv lighting add-face)
  (let ((l (- x block-radius))
        (r (+ x block-radius))
        (b (- y block-radius))
        (t y)
        (f (- z block-radius))
        (n (+ z block-radius)))
    (add-face center (left-face   l r b t f n uv lighting))
    (add-face center (right-face  l r b t f n uv lighting))
    (add-face center (bottom-face l r b t f n uv lighting))
    (add-face center (top-face    l r b t f n uv lighting))
    (add-face center (back-face   l r b t f n uv lighting))
    (add-face center (front-face  l r b t f n uv lighting))))


(definition (add-slab center x y z block-radius uv lighting add-face)
  (let ((l (- x block-radius))
        (r (+ x block-radius))
        (b (- y block-radius))
        (t y)
        (f (- z block-radius))
        (n (+ z block-radius)))
    (add-face center (left-face   l r b t f n uv lighting))
    (add-face center (right-face  l r b t f n uv lighting))
    (add-face center (bottom-face l r b t f n uv lighting))
    (add-face center (top-face    l r b t f n uv lighting))
    (add-face center (back-face   l r b t f n uv lighting))
    (add-face center (front-face  l r b t f n uv lighting))))


(definition (add-rail data-id center x y z block-radius uv lighting add-transparent-face)
  (case (bitwise-and data-id #x7)
    ((0) (add-bottom center x y z block-radius uv lighting add-transparent-face))
    ((1) (add-bottom center x y z block-radius uv lighting add-transparent-face))
    ((2) (add-right  center x y z block-radius uv lighting add-transparent-face))
    ((3) (add-left   center x y z block-radius uv lighting add-transparent-face))
    ((4) (add-front  center x y z block-radius uv lighting add-transparent-face))
    ((5) (add-back   center x y z block-radius uv lighting add-transparent-face))))


(definition add-epsilon
  .1)


(definition (add-left center x y z radius uv lighting add-transparent-face)
  (add-transparent-face center (left-face (+ (- x radius) add-epsilon) (+ x radius) (- y radius) (+ y radius) (- z radius) (+ z radius) uv lighting)))


(definition (add-right center x y z radius uv lighting add-transparent-face)
  (add-transparent-face center (right-face (- x radius) (- (+ x radius) add-epsilon) (- y radius) (+ y radius) (- z radius) (+ z radius) uv lighting)))


(definition (add-bottom center x y z radius uv lighting add-transparent-face)
  (add-transparent-face center (bottom-face (- x radius) (+ x radius) (+ (- y radius) add-epsilon) (+ y radius) (- z radius) (+ z radius) uv lighting)))


(definition (add-top center x y z radius uv lighting add-transparent-face)
  (add-transparent-face center (top-face (- x radius) (+ x radius) (- y radius) (- (+ y radius) add-epsilon) (- z radius) (+ z radius) uv lighting)))


(definition (add-back center x y z radius uv lighting add-transparent-face)
  (add-transparent-face center (back-face (- x radius) (+ x radius) (- y radius) (+ y radius) (+ (- z radius) add-epsilon) (+ z radius) uv lighting)))


(definition (add-front center x y z radius uv lighting add-transparent-face)
  (add-transparent-face center (front-face (- x radius) (+ x radius) (- y radius) (+ y radius) (- z radius) (- (+ z radius) add-epsilon) uv lighting)))


(definition (add-transparent data-id l r b f center x y z block-radius uv lighting add-transparent-face)
  (ecase data-id
    ((l)  (add-left  center x y z block-radius uv lighting add-transparent-face))
    ((r)  (add-right center x y z block-radius uv lighting add-transparent-face))
    ((b)  (add-back  center x y z block-radius uv lighting add-transparent-face))
    (else (add-front center x y z block-radius uv lighting add-transparent-face))))



;;;
;;;; View-Entity
;;;


(class View-Entity extends Entity
  
  
  (method override (prepare rest)
    (nextmethod rest)
    (set! texture (make-cairo-texture 866 588)))
  
  
  (method override (draw)
    (blit-surface~ (get-surface~ texture) (get-offscreen~ (get-root~ (get-toplevel)) #f))
    (map-texture~ texture)
    (glPushMatrix)
    (glTranslatef x y z)
    (glScalef 6.0 6.0 6.0)
    (textured-quad~ texture
      (lambda () (glVertex3f -1.0 -1.0  1.0))
      (lambda () (glVertex3f  1.0 -1.0  1.0))
      (lambda () (glVertex3f  1.0  1.0  1.0))
      (lambda () (glVertex3f -1.0  1.0  1.0)))
    (glPopMatrix))))

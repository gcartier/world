(module world.debugging jazz


(definition public debugging-priority <fl>
  1000.)


(definition package (start-debugging)
  (let ((thread (new-thread
                  (lambda ()
                    (thread-sleep! +inf.0))
                  'debugging)))
    (thread-base-priority-set! thread debugging-priority)
    (thread-start! thread))))

(module world.expanse jazz


(import (jazz.syntax (phase syntax))
        (world)
        (world.autoload)
        (world.syntax (phase syntax)))


(proclaim (warn optimizations))


(class Expanse extends Object
  
  
  (slot entities <list> initialize '() getter generate)
  
  
  (method override (print output readably)
    (print-unreadable self output
      (lambda (output)
        (format output "{?: with {a} entities~}" (not-null? entities) (length entities)))))
  
  
  ;; for now quick hack around designer problems
  (method (add-entity entity)
    (unless (memq? entity entities)
      (set! entities (cons entity entities))))
  
  
  (method (remove-entity entity)
    (set! entities (remove! entity entities)))
  
  
  (method (iterate-entities proc)
    (for-each proc entities))))

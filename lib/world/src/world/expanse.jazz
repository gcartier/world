(module world.expanse jazz


(proclaim (warn optimizations))


(class Expanse extends Object
  
  
  (slot entities     <list> initialize '() getter generate)
  (slot point-lights <list> initialize '() getter generate)
  
  
  (method override (print self output readably)
    (print-unreadable self output
      (lambda (output)
        (format output "{?:with {a} entities~}{?: with {a} point-lights~}"
          (not-null? entities) (length entities)
          (not-null? point-lights) (length point-lights)))))
  
  
  (method package (add-entity self entity)
    (set! entities (cons entity entities)))
  
  
  (method package (remove-entity self entity)
    (set! entities (remove! entity entities)))
  
  
  (method package (iterate-entities self proc)
    (for-each proc entities))
  
  
  (method package (add-point-light self point-light)
    (set! point-lights (cons point-light point-lights)))
  
  
  (method package (remove-point-light self point-light)
    (set! point-lights (remove! point-light point-lights)))))

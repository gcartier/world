(module world.instance jazz


(import (jazz.application)
        (jazz.component)
        (jazz.debuggee)
        (jazz.io)
        (jazz.jrm)
        (jazz.network)
        (world)
        (world.autoload)
        (world.master)
        (world.settings)
        (world.syntax (phase syntax))
        (world.work))


;;;
;;;; Processor
;;;


(definition protected processors
  (make-table test: equal?))


(definition protected (spawn-processor name)
  (let ((uuid (make-uuid))
        (processor (spawn-instance name)))
    (table-set! processors uuid processor)
    processor))


(definition protected (kill-processors)
  (iterate-table-safe processors
    (lambda (uuid processor)
      (kill-processor uuid))))


(definition protected (kill-processor uuid)
  (let ((processor (table-ref processors uuid)))
    (processor-quit~ processor)
    (table-clear processors uuid)))


;;;
;;;; Instance
;;;


(definition protected (spawn-instance instance)
  (start-remote-listener)
  (let ((debug? (processor-debug?)))
    (spawn-slave-process "processor" (get-processor-filename)
      (lambda (slave cookie)
        (let ((server (load-object~ (get-local-register) 'world.server.remote 'world-remote-server))
              (worker (require-worker)))
          (processor-setup~ slave server worker))
        slave)
      arguments: `("-instance" ,instance)
      debug?: debug?
      wait?: #t)))


(definition (processor-debug?)
  (world-setting 'world.processor-debug? #f))


;;;
;;;; Component
;;;


(class Instance extends Component
  
  
  (property template initialize #f accessors generate))


;;;
;;;; Exit
;;;


(add-exit-job! kill-processors))

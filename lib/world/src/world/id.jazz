(module world.id jazz


(proclaim (warn optimizations))


(definition protected actors <table>
  (make-table test: equal? weak-values: #t))

;; quicky this should simply go inside the tier
(definition protected (reset-actors)
  (set! actors (make-table test: equal? weak-values: #t)))


(definition public (register-actor id actor)
  (table-set! actors id actor))


(definition public (unregister-actor id)
  (table-clear actors id))


(definition public (registered-actor id)
  (table-ref actors id #f)))

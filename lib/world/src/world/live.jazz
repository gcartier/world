                      (cond ((get-paused? history)
                             (editor-delete self (get-position elem)))
                            (else
                             ;; quicky copy-pasted from editor-delete
                             (editor-remove-element self elem)
                             (set-modified? zone #t)))))
                  selection))
      
      (let ((selection (collect-if (lambda (elem)
                                     (is-not? elem Spawn))
                                   selection)))
        (when (not-null? selection)

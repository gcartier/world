  (method (post-render)
    (when render-target
      (deactivate~ render-target)
      (glClearColor 0. 0. 0. 1.)
      (glClear GL_COLOR_BUFFER_BIT)
      (glClear GL_DEPTH_BUFFER_BIT)
      
      ;; Copy the color buffer from the render target onto the native color buffer (0)
      (blit~ render-target 0)
      
      @transfer-render-target-using-shader (
      (glClearColor 0. 0. 0. 1.)
      (glClear GL_COLOR_BUFFER_BIT)
      (glClear GL_DEPTH_BUFFER_BIT)
      
      (activate~ pp-program)
      (glActiveTexture GL_TEXTURE7)
      (glBindTexture GL_TEXTURE_2D (get-id~ render-target))
      (glUniform1i (get-fbo_texture-uniform~ pp-program) 7)
      
      (glEnableVertexAttribArray (get-vertex_coord-attribute~ pp-program))
      
      (glBindBuffer GL_ARRAY_BUFFER (get-vbo/fbo-vertices~ pp-program))
      (glVertexAttribPointer (get-vertex_coord-attribute~ pp-program) 2 GL_FLOAT GL_FALSE 0 #f)
      (glDrawArrays GL_TRIANGLE_STRIP 0 4)
      (glDisableVertexAttribArray (get-vertex_coord-attribute~ pp-program))
      (glBindTexture GL_TEXTURE_2D 0)
      (deactivate~ pp-program))))
  
  

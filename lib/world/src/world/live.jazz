  (method (move-forward)
    (let ((me (current-me))
          (target (first-target)))
      (cond ((and orbit-mode? target)
             (first-distance-closer speed: .95)
             (orbit-behind target))
            ((and first-person? (not paused?))
             (move-up~ me commands))
            (else
             (when (hook-eye)
               (move-forward~ eye))))))
  
  
  (method (move-backward)
    (let ((me (current-me))
          (target (first-target)))
      (cond ((and orbit-mode? target)
             (first-distance-further speed: .95)
             (orbit-behind target))
            ((and first-person? (not paused?))
             (move-down~ me commands))
            (else

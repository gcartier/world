        (set-textures?~ zone #t)
      (let ((next (if reversed? previous-element next-element)))
        (let ((texture (next (collect-textures) (get-texture~ (get-material~ tile-mesh)))))
          (set-texture~ (get-material~ tile-mesh) texture)

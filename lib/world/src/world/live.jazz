  ;; left+right mouse run
  (method (process-mouse-run self)
    (when application-active?
      (let ((modifiers (modifiers-keys)))
        (when (and (null? modifiers)
                   (get-mouse-down?)
                   (get-mouse-right-down?))
          (unless mouse-run?
            (set! mouse-run? #t)
            (mouse-track self 0. 0. 0.))
          (move-forward self)))))
  
  

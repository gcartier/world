(module world.script jazz


(export (world)
        (world.audio)
        (world.autoload)
        (world.commands)
        (world.geometry)
        (world.scripting)
        (world.script.actor)
        (world.script.syntax)
        (world.syntax))


;;;
;;;; Move
;;;


@script (
(handle (tick)
  (move))
)


;;;
;;;; Happy
;;;


@script (
(define happy?
  #f)

(handle (tick)
  (if (near-player? me)
      (begin
        (when (not happy?)
          (sound bark volume: .25))
        (lookat-player me)
        (jump)
        (set! happy? #t))
    (move)
    (set! happy? #f)))
))

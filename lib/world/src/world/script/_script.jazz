;;;
;;;; Tick
;;;


(definition public (looping proc)
  (declare (proper-tail-calls))
  (with-tick
    (lambda (actor script time elapse iter)
      (let ((stop? #f))
        (define (stop)
          (set! stop? #t))
        
        (proc stop)
        (unless stop?
          (iter))))))



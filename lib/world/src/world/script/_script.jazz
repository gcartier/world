;;;


(definition public (random-getter! lst)
  (let ((all lst)
        (remaining '()))
    (lambda ()
      (when (null? remaining)
        (set! remaining (copy all)))
      (if (null? remaining)
          #f
        (let ((elem (random-element remaining)))
          (set! remaining (remove! elem remaining))
          elem)))))



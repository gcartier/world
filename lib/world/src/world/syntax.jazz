(module world.syntax jazz


(syntax public debug-allocation
  (lambda (form-src usage-environment macro-environment)
    (let ((name (cadr (source-code form-src))))
      (sourcify-if
        `(when (debug-memory?)
           (debug-memory-allocation ',name))
        form-src)))))

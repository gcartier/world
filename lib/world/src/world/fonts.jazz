(module world.fonts jazz


(import (jazz.graphic)
        (world.settings))


(definition script-font
  (world-setting 'world.script-font 'vera-mono))

(definition script-size
  (world-setting 'world.script-size 16))

(definition script-shadow
  (world-setting 'world.script-shadow 'none))

(definition script-antialias
  (world-setting 'world.script-antialias 'default))


(define-font Label       font-name: 'tahoma point-size: 12 shadow: 'thin antialias: 'none)
(define-font Label-User  font-name: 'tahoma point-size: 12 shadow: 'thin antialias: 'none)
(define-font Title-User  font-name: 'vera-sans point-size: 14 shadow: 'thin antialias: 'none)
(define-font Memory      font-name: 'tahoma point-size: 12 shadow: 'thin antialias: 'none)
(define-font Code        font-name: script-font point-size: script-size shadow: script-shadow antialias: script-antialias)
(define-font Message     font-name: 'tahoma point-size: 28 shadow: 'thin antialias: 'none)
(define-font Status      font-name: 'tahoma point-size: 18 shadow: 'thin antialias: 'none)
(define-font Heading1    font-name: 'vera-serif point-size: 36 shadow: 'thin antialias: 'none)
(define-font Heading2    font-name: 'vera-sans point-size: 24 shadow: 'thin antialias: 'none)
(define-font Heading3    font-name: 'vera-serif point-size: 18 italic?: #t shadow: 'thin antialias: 'none)
(define-font Heading4    font-name: 'vera-serif point-size: 16 italic?: #t shadow: 'thin antialias: 'none)
(define-font Heading5    font-name: 'vera-serif point-size: 14 shadow: 'thin antialias: 'none))

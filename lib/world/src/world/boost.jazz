;;;; Boosts
;;;


(module world.boost jazz


(import (jazz.geometry)
        (jazz.graphic)
        (jazz.graphic.opengl.glew)
        (world)
        (world.autoload)
        (world.draw)
        (world.entity)
        (world.geometry)
        (world.syntax (phase syntax))
        (world.tile))


;;;
;;;; Boost
;;;


(class Boost extends Tile
  
  
  (method override (prepare rest)
    (nextmethod rest)
    (set-radiuses (vertex 1. 1. 1.)))
  
  
  (method override (element-radius)
    1.)
  
  
  (method override (draw)
    (draw-sphere (get-x) (get-y) (get-z) 1. 26 52 {Color Yellow}))))

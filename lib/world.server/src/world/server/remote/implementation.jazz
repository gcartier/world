(module world.server.remote.implementation jazz


(import (jazz.event)
        (jazz.process))


(class World-Remote-Server extends Object
  
  
  (method public (register-client client)
    (call-event
      (lambda ()
        (register-client~ (get-process) client))))
  
  
  (method public (unregister-client client)
    (call-event
      (lambda ()
        (unregister-client~ (get-process) client))))
  
  
  (method public (enter-world client player-name player-avatar)
    (call-event
      (lambda ()
        (enter-world~ (get-process) client player-name player-avatar))))
  
  
  (method public (quit-world client player-name)
    (call-event
      (lambda ()
        (quit-world~ (get-process) client player-name))))
  
  
  (method public (update-client client)
    (call-event
      (lambda ()
        (update-client~ (get-process) client))))
  
  
  (method public (client-tick client commands elapse)
    (execute-event
      (lambda ()
        (client-tick~ (get-process) client commands elapse))))
  
  
  (method public (client-test client argument)
    (execute-event
      (lambda ()
        (client-test~ (get-process) client argument))))))

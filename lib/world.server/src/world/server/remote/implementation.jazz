;;;; World Remote Server Implementation
;;;


(module world.server.remote.implementation jazz


(import (jazz.debuggee)
        (jazz.system)
        (jazz.ui.window)
        (world.stub))


(class World-Remote-Server extends Object
  
  
  (method public (register-client client)
    (call-event
      (lambda ()
        (register-client~ (get-process) client))))
  
  
  (method public (unregister-client client)
    (call-event
      (lambda ()
        (unregister-client~ (get-process) client))))
  
  
  (method public (enter-world client player-name)
    (call-event
      (lambda ()
        (enter-world~ (get-process) client player-name))))
  
  
  (method public (exit-world client player-name)
    (call-event
      (lambda ()
        (exit-world~ (get-process) client player-name))))
  
  
  (method public (client-tick client commands)
    (execute-event
      (lambda ()
        (client-tick~ (get-process) client commands))))))

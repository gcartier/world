(module world.server.remote.implementation jazz


(import (jazz.process)
        (world.task))


(class World-Remote-Server extends Object
  
  
  (method public (client-register client)
    (with-task-mutex
      (lambda ()
        (client-register~ (get-process) client))))
  
  
  (method public (client-unregister client)
    (with-task-mutex
      (lambda ()
        (client-unregister~ (get-process) client))))
  
  
  (method public (client-enter client player-name player-avatar)
    (with-task-mutex
      (lambda ()
        (client-enter~ (get-process) client player-name player-avatar))))
  
  
  (method public (client-exit client player-name)
    (with-task-mutex
      (lambda ()
        (client-exit~ (get-process) client player-name))))
  
  
  (method public (client-update client changes)
    (with-task-mutex
      (lambda ()
        (client-update~ (get-process) client changes))))
  
  
  (method public (client-debug client arguments)
    (with-task-mutex
      (lambda ()
        (client-debug~ (get-process) client arguments))))
  
  
  (method public (register-literal literal)
    (with-task-mutex
      (lambda ()
        (register-literal~ (get-process) literal))))))

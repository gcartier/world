(module world.server.serving jazz


(import (jazz.debuggee)
        (jazz.presence)
        (jazz.presence.transmission)
        (world)
        (world.autoload))


(class Serving-Tier extends Tier
  
  
  (method package (calling-client self delegate thunk)
    (unless (get-exception delegate)
      (if (remote-proxy? (get-controller-debugger))
          (thunk)
        (catch (connection-exception? exc
                 (set-exception delegate exc)
                 (set-exception-time delegate (current-seconds))
                 (delay-disconnected-client self delegate))
          (thunk)))))
  
  
  ;; until disconnected handled also on processor
  (method protected virtual (delay-disconnected-client self delegate)
    )))

(module world.processor.remote.implementation jazz


(import (jazz.presence)
        (jazz.syntax (phase syntax))
        (world)
        (world.autoload)
        (world.context)
        (world.processor)
        (world.support)
        (world.syntax (phase syntax))
        (world.task)
        (world.tier)
        (world.work))


(definition (with-processor-tier proc)
  (with-task-mutex
    (lambda ()
      (let ((processor (current-processor+)))
        (if (and processor
                 (not shutdown?)
                 (not being-debugged?))
            (continuation-capture
              (lambda (exit)
                (parameterize ((current-exit exit))
                  (proc processor))))
          disconnect-marker)))))


(class World-Remote-Processor extends Object
  
  
  (method public (processor-setup self master cookie server server-name zone)
    (processor-setup (current-processor) master cookie server server-name zone))
  
  
  (method public (processor-quit self)
    (processor-quit (current-processor)))
  
  
  (method public (client-enter self client client-id client-no character-name character-avatar character-script)
    (client-enter (current-processor) client client-id client-no character-name character-avatar character-script))
  
  
  (method public (client-exit self client character-name)
    (client-exit (current-processor) client character-name))
  
  
  (method public (client-update self client sent changes)
    (with-processor-tier
      (lambda (processor)
        (client-update processor client sent changes))))
  
  
  (method public (client-audio self client buffer timestamp duration)
    (with-processor-tier
      (lambda (processor)
        (client-audio processor client buffer timestamp duration))))
  
  
  (method public (client-video self client buffer timestamp duration)
    (with-processor-tier
      (lambda (processor)
        (client-video processor client buffer timestamp duration))))
  
  
  (method public (retrieve-region self region-index)
    (with-processor-tier
      (lambda (processor)
        (retrieve-region processor region-index))))
  
  
  (method public (retrieve-chunk self region-index chunk-index chunk-digest)
    (with-processor-tier
      (lambda (processor)
        (retrieve-chunk processor region-index chunk-index chunk-digest))))
  
  
  (method public (retrieve-entity self id)
    (with-processor-tier
      (lambda (processor)
        (retrieve-entity processor id))))))

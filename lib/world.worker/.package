(package world.worker
  
  (title "Worker")
  (description "World worker process")
  (authors "Guillaume Cartier")
  (stage alpha)
  (root "src")
  (products (world.worker (alias worker)
                          (update world.worker
                                  world.worker.appl
                                  world.worker.process
                                  world.worker.remote
                                  world.worker.remote.implementation
                                  world.worker.run
                                  world.worker.settings)
                          (dependencies scheme.core
                                        jazz
                                        jazz.evaluate
                                        jazz.graphic
                                        jazz.io
                                        jazz.jml
                                        jazz.platform
                                        jazz.resources
                                        jazz.ui
                                        (cond
                                          ((or mac windows) jiri))
                                        jazz.debuggee))
            (world-worker (title "Worker")
                          (run world.worker.run)
                          (build (world-worker executable: "worker" resources: "resources"))
                          (dependencies world.worker)))
  (project ".project"))
